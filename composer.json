{
    "name": "aichadigital/laravel-mustache-resolver",
    "description": "Framework-agnostic, fully testable, SOLID-compliant mustache template resolver for PHP applications with first-class Laravel integration",
    "keywords": [
        "aichadigital",
        "laravel",
        "mustache",
        "template",
        "resolver",
        "eloquent",
        "placeholders"
    ],
    "homepage": "https://github.com/AichaDigital/mustache",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "AichaDigital",
            "email": "dev@aichadigital.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "dragonmantank/cron-expression": "^3.4",
        "illuminate/contracts": "^10.0||^11.0||^12.0",
        "illuminate/support": "^10.0||^11.0||^12.0"
    },
    "require-dev": {
        "infection/infection": "^0.32.3",
        "larastan/larastan": "^2.0||^3.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^7.0||^8.0",
        "orchestra/testbench": "^8.0||^9.0||^10.0",
        "pestphp/pest": "^2.0||^3.0",
        "pestphp/pest-plugin-arch": "^2.0||^3.0",
        "pestphp/pest-plugin-laravel": "^2.0||^3.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^1.0||^2.0",
        "phpstan/phpstan-phpunit": "^1.0||^2.0"
    },
    "autoload": {
        "psr-4": {
            "AichaDigital\\MustacheResolver\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AichaDigital\\MustacheResolver\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage --min=90",
        "test-coverage-html": "XDEBUG_MODE=coverage vendor/bin/pest --coverage-html build/coverage",
        "test-coverage-clover": "XDEBUG_MODE=coverage vendor/bin/pest --coverage-clover build/coverage.xml",
        "mutate": "XDEBUG_MODE=coverage vendor/bin/infection --threads=4 --show-mutations",
        "mutate-ci": "XDEBUG_MODE=coverage vendor/bin/infection --threads=4 --logger-github --min-msi=80 --min-covered-msi=85",
        "format": "vendor/bin/pint",
        "quality": [
            "@format",
            "@analyse",
            "@test-coverage"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "infection/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AichaDigital\\MustacheResolver\\Laravel\\MustacheServiceProvider"
            ],
            "aliases": {
                "Mustache": "AichaDigital\\MustacheResolver\\Laravel\\Facades\\Mustache"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
